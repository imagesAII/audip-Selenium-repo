<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="LoginTests">
	<test name="ValidLogin">
		<parameter name="username" value="student" />
		<parameter name="password" value="Password123" />
		<parameter name="expected" value="valid" />
		<classes>
			<class name="anudip.assignments.LoginTestUsingParamters" />
		</classes>
	</test>
	<test name="InvalidLogin_WrongUsername">
		<parameter name="username" value="wronguser" />
		<parameter name="password" value="Password123" />
		<parameter name="expected" value="invalid" />
		<classes>
			<class name="anudip.assignments.LoginTestUsingParamters" />
		</classes>
	</test>
	<test name="InvalidLogin_WrongPassword">
		<parameter name="username" value="student" />
		<parameter name="password" value="wrongpass" />
		<parameter name="expected" value="invalid" />
		<classes>
			<class name="anudip.assignments.LoginTestUsingParamters" />
		</classes>
	</test>
</suite>